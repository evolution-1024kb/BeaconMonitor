<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingEnd="8dp"
              android:paddingStart="8dp"
              android:paddingTop="8dp"
              tools:context="cx.mb.beaconmonitor.fragment.BeaconListFragment">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <EditText
            android:id="@+id/beacon_list_text_uuid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" android:layout_weight="1"
            android:inputType="text" android:text="@string/dummy"/>

        <Button
            android:id="@+id/beacon_list_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_clear"
        />

        <Button
            android:id="@+id/beacon_list_button_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/button_filter"/>

    </LinearLayout>

    <ListView
        android:id="@+id/beacon_list_list_beacons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
